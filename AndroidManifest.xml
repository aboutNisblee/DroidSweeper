<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.nisble.droidsweeper"
    android:versionCode="3"
    android:versionName="pre1.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher_v1"
        android:label="@string/app_name"
        android:logo="@drawable/icon_launcher_v1"
        android:theme="@style/ThemeSelector" >
        <activity
            android:name=".gui.DroidSweeperActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.SettingsActivity" >
        </activity>
        <activity android:name=".gui.HighScoreActivity" >
        </activity>
    </application>

</manifest>